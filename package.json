{
  "name": "snowball",
  "version": "1.0.0",
  "repository": "git@github.com:guzart/snowball.git",
  "author": "Arturo Guzman <arturo@guzart.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "clean": "test -z dist || rm -rf dist",
    "deploy": "yarn clean && yarn build && firebase deploy --only hosting",
    "dev": "webpack-dev-server --hot --inline",
    "setup": "npm i -g firebase-tools && yarn install",
    "start": "concurrently 'yarn dev' 'yarn tapes'",
    "tapes": "ts-node -O '{\"module\":\"commonjs\"}' lib/tapesServer.ts"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "devcert": "^1.0.0",
    "dotenv": "^5.0.1",
    "elm-assets-loader": "^0.3.0",
    "elm-hot-loader": "^0.5.4",
    "elm-webpack-loader": "^4.5.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "talkback": "^1.2.0",
    "ts-loader": "^4.2.0",
    "ts-node": "^6.0.2",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.6",
    "@fortawesome/fontawesome-free-regular": "^5.0.11",
    "@fortawesome/fontawesome-free-solid": "^5.0.11",
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "moment": "^2.22.1",
    "popper.js": "^1.14.3"
  }
}
